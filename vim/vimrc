
" Note: Skip initialization for vim-tiny or vim-small.
if 0 | endif

" ----------------
" Plugins & Setups
" ----------------

"dein Scripts-----------------------------
if &compatible
  set nocompatible               " Be iMproved
endif

" Required:
set runtimepath+=~/.vim/bundles/repos/github.com/Shougo/dein.vim

" Required:
if dein#load_state('~/.vim/bundles')
  call dein#begin('~/.vim/bundles')

  " Let dein manage dein
  " Required:
  call dein#add('~/.vim/bundles/repos/github.com/Shougo/dein.vim')

  " Add or remove your plugins here:
  call dein#add('Shougo/neosnippet.vim')
  call dein#add('Shougo/neosnippet-snippets')

  " My Bundles here:
  call dein#add( 'kien/ctrlp.vim' )
  call dein#add( 'Shougo/unite.vim' )
  call dein#add( 'tpope/vim-fugitive' )
  call dein#add( 'vim-airline/vim-airline' )
  call dein#add( 'vim-airline/vim-airline-themes' )


  " You can specify revision/branch/tag.
  call dein#add('Shougo/vimshell', { 'rev': '3787e5' })

  " Required:
  call dein#end()
  call dein#save_state()
endif

" Required:
filetype plugin indent on
syntax enable

" If you want to install not installed plugins on startup.
"if dein#check_install()
"  call dein#install()
"endif

"End dein Scripts-------------------------

"Airline Settings-------------------------
" Show vim-airline bar the whole time
set laststatus=2
set encoding=utf-8
set guifont=Droid\ Sans\ Mono\ for\ Powerline
let g:airline_powerline_fonts = 1
let g:airline_theme = 'sol'
let g:airline_extensions = ['branch', 'tabline']
"End Airline Settings---------------------



" -----------------------
" VIM Basic Configuration
" -----------------------

" Reload files which where modified outside of VIM
if !exists("autocommands_loaded")
  let autocommands_loaded=1
  autocmd BufEnter * checktime
endif

" UX settings ------------
set path=$PWD/** " search in current folder and subfolders
set wildignore+=*.o,*.d,*.obj,*.pdf
set wildmenu
set relativenumber
set number
set hlsearch

" formatting settins ----
set smartindent
set tabstop=2 softtabstop=2
set shiftwidth=2
set expandtab " use spaces for tabs

set colorcolumn=80

" Tweaks for file browsing
let g:netrw_banner=1
let g:netrw_liststyle=3

" Source vim config in the local directory
silent! so .vimlocal
